<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Nuevo Maestro"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <EditText
        android:id="@+id/editTextNombreMaestro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del maestro"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextApellidoMaestro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellido del maestro"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextEdadMaestro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edad del maestro"
        android:inputType="number" />

    <Button
        android:id="@+id/btnGuardarMaestro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar" />

</LinearLayout>